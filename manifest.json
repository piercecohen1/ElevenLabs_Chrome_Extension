{
  "manifest_version": 2,
  "name": "AI Text Reader",
  "version": "1.0",
  "description": "Read text aloud with AI",
  "permissions": [
    "contextMenus",
    "storage",
    "clipboardRead",
    "clipboardWrite",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["functions.js", "content.js"]
    }
  ],
  "icons": {
    "48": "icon.png"
  }
}